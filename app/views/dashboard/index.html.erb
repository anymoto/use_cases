<section>
  <h1>Welcome, you amazing best!</h1>

  <% if @use_cases.empty? %>
    <h2>Uses cases information is not available.</h2>
  <% else %>
    <h2>Get familiar with us by creating your first job</h2>

    <div class='use-cases-wrapper'>
      <strong>What would you like to do?</strong>
      <div class='row'>

        <% @use_cases.each_with_index do |use_case, index| %>
          <div class='col-sm-3 pull-left use-case <%= render_use_case(index) %>'>
            <%= link_to use_case.key, class: 'use-case-link' do %>
              <%= image_tag use_case.image, alt: use_case.name, class: 'use-case-image' %>
              <div class='use-case-name'><%= use_case.name %></div>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  <% end %>

</section>

<%= link_to '#', class: "link pull-right js-toggle-content #{ render_link(@use_cases.length) }" do %>
  <span>See more</span>
  <span class='caret js-caret pull-right'></span>
<% end %>
<div class='clearfix'></div>

<hr>

<div class='row'>
  <div class='col-sm-4'>
    <%= render 'shared/side_navigation' %>
  </div>
  <div class='col-sm-8'>
    <%= render 'shared/data_summary_form' %>
  </div>
</div>

<%= javascript_tag do %>
  $(document).ready(function() {
    new Dashboard();
    new DataSummaryForm();
  });
<% end %>
