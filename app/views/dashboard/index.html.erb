<section>
  <h1>Welcome to CrowdFlower, you amazing best!</h1>
  <% if @use_cases.present? %>
    <h2>Get familiar with us by creating your first CrowdFlower job</h2>

    <div class='use-cases-wrapper'>
      <strong>What would you like to do?</strong>
      <div class='row'>

        <% @use_cases.each_with_index do |use_case, index| %>
          <% if index < 8 %>
            <div class='col-sm-3 pull-left use-case'>
          <% else %>
            <div class='col-sm-3 pull-left use-case js-use-case-hidden'>
          <% end %>
          <%= link_to use_case.key, class: 'use-case-link' do %>
            <%= image_tag use_case.image, alt: use_case.name, class: 'use-case-image' %>
            <div class='use-case-name'><%= use_case.name %></div>
          <% end %>
          </div>
        <% end %>

      </div>
    </div>

  <% else %>
    <h2>Uses cases information is not available.</h2>
  <% end %>
</section>

<% if @use_cases.length > 8 %>
  <%= link_to '#', class: 'base-link pull-right js-toggle-content' do %>
    <span>See more</span>
    <span class='caret pull-right'></span>
  <% end %>
  <div class='clearfix'></div>
<% end %>

<hr>

<row>
  <div class='col-sm-4 side-navigation'>
    <%= render 'side_navigation' %>
  </div>
  <div class='col-sm-8'>
  <article>
      <h3>Don't see what you're looking for?</h3>
      <p>Tell us what your data needs - we'll get back to you with a recommendation</p>

      <div class='text-area-container'>
        <span class='text-warning hidden'>Message should be 140 characters long max.</span>
        <%= text_area_tag 'text-area', nil, class: 'text-area',
          placeholder: 'Describe your data goals in a short summary' %>
        <p class='upload-heading pull-left'>Attach a sample of your data (optional)</p>
        <div class='clearfix'></div>
        <%= link_to 'Upload File', '#', class: 'primary-button pull-left' %>
        <form action='/file-upload' class='dropzone' id='sampleDropzone'></form>
      </div>

      <%= link_to 'Send', '#', class: 'submit-form-button pull-right disabled' %>
  </article>
  </div>
</row>

<%= javascript_tag do %>
  $(document).ready(function() {
    new Dashboard();
    new DataSummaryForm();
  });
<% end %>
